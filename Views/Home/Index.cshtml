@{
    ViewData["Title"] = "Home Page";
}



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Events Home Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero {
            color: #fff;
            padding: 100px 0;
            text-align: center;
        }
        .hero h1 {
            font-size: 3rem;
        }
        .hero p {
            font-size: 1.5rem;
        }
        .footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }
        .display-4{
            color: #fff; /* White color for better visibility on dark background */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        /* Wrapper for your main content */
        .wrapper {
            flex: 1;
        }

        /* Footer styling */
        .footer {
            background-color: #343a40;
            color: #ffffff;
            text-align: center;
            padding: 10px 0;
        }

    </style>
</head>
<body>
<div class="wrapper">
    <!-- Hero Section -->
    <header class="hero">
        <div class="container">
            <h1 class="display-4">Welcome to Sport's Events Admin Application</h1>
        </div>
    </header>



    <!-- Footer -->
    <footer id="contact" class="footer">
        <div class="container">
            <p>&copy; 2024 SportsEvents. All Rights Reserved.</p>
            <p>Contact us at <a href="mailto:info@sportsevents.com" class="text-white">info@sportsevents.com</a></p>
        </div>
    </footer>
</div>


<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
