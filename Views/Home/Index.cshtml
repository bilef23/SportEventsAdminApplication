@{
    ViewData["Title"] = "Home Page";
}



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Events Home Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero {
            background: url('https://media.npr.org/assets/img/2023/08/14/gettyimages-1613000057_wide-c883609c2b6c6f5413b80554ecfa40f0d7f3f151.jpg?s=1400&c=100&f=jpeg') no-repeat center center;
            background-size: cover;
            color: #fff;
            padding: 100px 0;
            text-align: center;
        }
        .hero h1 {
            font-size: 3rem;
        }
        .hero p {
            font-size: 1.5rem;
        }
        .footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }
        .display-4{
            color: #fff; /* White color for better visibility on dark background */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }
    </style>
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">SportsEvents</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
</nav>

<!-- Hero Section -->
<header class="hero">
    <div class="container">
        <h1 class="display-4">Welcome to Sport's Events</h1>
        <p class="display-4">Your ultimate destination for the latest sports events and updates in 2024.</p>
        <a href="Events/Index" class="btn btn-primary btn-lg">Register your team to attent one of the biggest sport events</a>
    </div>
</header>

<!-- About Section -->
<section id="about" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">About Us</h2>
        <p class="text-center">We are dedicated to providing you with the latest news, tips, and expert advice to help you achieve your fitness goals and lead a healthier life. Whether you're a seasoned athlete or just starting out, we're here to help you reach your full potential.</p>
    </div>
</section>

<!-- Footer -->
<footer id="contact" class="footer">
    <div class="container">
        <p>&copy; 2024 SportsEvents. All Rights Reserved.</p>
        <p>Contact us at <a href="mailto:info@sportsevents.com" class="text-white">info@sportsevents.com</a></p>
    </div>
</footer>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
