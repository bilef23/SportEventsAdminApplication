@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SportEvents.Enum
@model SportEventsAdminApplication.Models.Domain.Event

@{
ViewData["Title"] = "Create";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2,h4,label{
        font-weight: bolder;
        color: #5F6F65;
    }
</style>
<h2 class="text-center">Create New Event</h2>

<hr />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 shadow p-4 rounded">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Event Details Section -->
                <h4>Event Details</h4>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter event name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter event description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" placeholder="Enter event location"/>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EventType" class="control-label"></label>
                    @Html.DropDownListFor(m => m.EventType, new SelectList(Enum.GetValues(typeof(EventType))), "Select Event Type", new { @class = "form-control" })
                    <span asp-validation-for="EventType" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <!-- Event Capacity and Price Section -->
                <h4>Event Capacity and Pricing</h4>
                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="MaximumRegistrations" class="control-label"></label>
                        <input asp-for="MaximumRegistrations" class="form-control" placeholder="Max Registrations"/>
                        <span asp-validation-for="MaximumRegistrations" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="EventPrice" class="control-label"></label>
                        <input asp-for="EventPrice" class="form-control" placeholder="Event Price"/>
                        <span asp-validation-for="EventPrice" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MaximumCapacityEvent" class="control-label"></label>
                    <input asp-for="MaximumCapacityEvent" class="form-control" placeholder="Max Capacity"/>
                    <span asp-validation-for="MaximumCapacityEvent" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="OpenForRegistrations" class="control-label"></label>
                    <input asp-for="OpenForRegistrations" class="form-check-input" type="checkbox"/>
                    <span asp-validation-for="OpenForRegistrations" class="text-danger"></span>
                </div>

                <!-- Organizer Details Section -->
                <h4>Organizer Details</h4>
                <div class="form-group mb-3">
                    <label asp-for="OrganizerId" class="control-label"></label>
                    <select asp-for="OrganizerId" class="form-control" asp-items="ViewBag.OrganizerId"></select>
                </div>

                <h5 class="mt-4">Create New Organizer</h5>

                <div class="form-group mb-3">
                    <label asp-for="Organizer.Name" class="control-label"></label>
                    <input asp-for="Organizer.Name" class="form-control" placeholder="Organizer Name" />
                    <span asp-validation-for="Organizer.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Organizer.ContactEmail" class="control-label"></label>
                    <input asp-for="Organizer.ContactEmail" class="form-control" placeholder="Organizer Email" />
                    <span asp-validation-for="Organizer.ContactEmail" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Organizer.Address" class="control-label"></label>
                    <input asp-for="Organizer.Address" class="form-control" placeholder="Organizer Address" />
                    <span asp-validation-for="Organizer.Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Organizer.ContactPhone" class="control-label"></label>
                    <input asp-for="Organizer.ContactPhone" class="form-control" placeholder="Organizer Phone" />
                    <span asp-validation-for="Organizer.ContactPhone" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-outline-light btn-lg">Create Event</button>
                    <a asp-action="Index" class="btn btn-outline-dark btn-lg">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

